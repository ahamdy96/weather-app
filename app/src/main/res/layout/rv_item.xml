<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="37Â°C"
                android:textColor="@color/colorAccentDay"
                android:textSize="16dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_layout_item_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tv_item_temp_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_temp_high"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/colorAccentDay"
                    android:includeFontPadding="false"
                    android:text="@string/empty_temp_value"
                    android:textColor="@color/colorAccentDay"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/tv_item_temp_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_temp_low"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/colorAccentDay"
                    android:includeFontPadding="false"
                    android:text="@string/empty_temp_value"
                    android:textColor="@color/colorAccentDay"
                    android:textSize="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Clear Sky"
                android:textColor="@color/colorAccentDay"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/img_item_weather_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/weather_partly_cloudy"
                android:tint="@color/colorAccentDay" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</layout>
